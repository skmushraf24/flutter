Build a Flutter application where pressing a button will change the color of all text widgets within the application

source code:
import 'package:flutter/material.dart';
import 'dart:math'; // For random color generation

class ChangeTextColorApp extends StatefulWidget {
  const ChangeTextColorApp({super.key});

  @override
  State<ChangeTextColorApp> createState() => _ChangeTextColorAppState();
}

class _ChangeTextColorAppState extends State<ChangeTextColorApp> {
  Color textColor = Colors.black; // initial color

  // Method to generate random colors
  void changeTextColor() {
    setState(() {
      textColor = Color.fromRGBO(
        Random().nextInt(256), // red
        Random().nextInt(256), // green
        Random().nextInt(256), // blue
        1, // opacity
      );
    });
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: const Text("Change All Text Colors")),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            Text("Hello, Flutter!", style: TextStyle(fontSize: 22, color: textColor)),
            Text("This is a demo app.", style: TextStyle(fontSize: 22, color: textColor)),
            Text("Press the button below ðŸ‘‡", style: TextStyle(fontSize: 22, color: textColor)),
            const SizedBox(height: 40),
            ElevatedButton(
              onPressed: changeTextColor,
              child: const Text("Change Text Color"),
            ),
          ],
        ),
      ),
    );
  }
}
